# Convex Configuration
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud
CONVEX_DEPLOY_KEY=your-deploy-key

# GitHub OAuth (for Convex Auth)
AUTH_GITHUB_ID=your-github-oauth-app-id
AUTH_GITHUB_SECRET=your-github-oauth-app-secret

# Site URL (for Open Graph, etc)
NEXT_PUBLIC_SITE_URL=https://souls.directory
CONVEX_SITE_URL=https://souls.directory

# Analytics (Plausible)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=souls.directory

# Rate Limiting - Upstash Redis (via Vercel KV integration)
# These are auto-populated when you add Upstash KV through Vercel
KV_REST_API_URL=https://your-kv-project.upstash.io
KV_REST_API_TOKEN=your-kv-token

# Alternative: Direct Upstash integration (if not using Vercel KV)
# UPSTASH_REDIS_REST_URL=https://your-project.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Sentry Error Monitoring
# Get these from https://sentry.io -> Settings -> Projects -> [your-project] -> Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://xxx@o123.ingest.sentry.io/456

# Sentry organization and project slugs (for source map uploads)
# Only needed if you want to upload source maps (requires paid plan or auth token)
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=souls-directory

# Sentry Auth Token (optional - for source map uploads)
# Generate at https://sentry.io/settings/account/api/auth-tokens/
# Required scopes: project:releases, org:read
# SENTRY_AUTH_TOKEN=sntrys_xxx
