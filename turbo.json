{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "CONVEX_DEPLOY_KEY",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "KV_REST_API_TOKEN",
        "KV_REST_API_READ_ONLY_TOKEN",
        "KV_REST_API_URL",
        "KV_URL",
        "REDIS_URL",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "SENTRY_AUTH_TOKEN",
        "SENTRY_VERCEL_LOG_DRAIN_URL",
        "SENTRY_OTLP_TRACES_URL",
        "SENTRY_PUBLIC_KEY",
        "FLAGS_SECRET"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
