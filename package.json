{
  "name": "souls-directory",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "turbo run typecheck",
    "validate": "biome check . --write && pnpm typecheck",
    "test": "turbo run test",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "lefthook": "^1.11.6",
    "turbo": "^2.5.0",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.11.1"
  }
}
